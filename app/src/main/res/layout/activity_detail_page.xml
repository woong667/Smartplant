<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/gradient_background_light_green"
    tools:context="com.next.bluesignin.DetailPageActivity">

    <LinearLayout

        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:background="@color/metroGreen"
        android:orientation="horizontal"
        tools:layout_editor_absoluteX="-16dp"
        tools:layout_editor_absoluteY="-354dp">


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            app:srcCompat="@drawable/icon"
            tools:layout_editor_absoluteX="155dp"
            tools:layout_editor_absoluteY="-7dp" />

    </LinearLayout>
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="650dp"
        android:orientation="vertical"
        android:background="@color/white">

        <ImageView
            android:id="@+id/DetailImage"
            android:layout_width="match_parent"
            android:layout_height="243dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:orientation="horizontal"
            android:background="@drawable/textviewsolid">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="화분 이름: "
                android:layout_marginLeft="20dp"
                android:layout_marginTop="28dp"
                android:textStyle="bold"
                android:textSize="15sp"/>
        <TextView
            android:id="@+id/DetailPlantName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:textStyle="bold"
            android:layout_marginTop="28dp"
            />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:orientation="horizontal"
            android:background="@drawable/textviewsolid">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="식물의 적정온도: "
                android:layout_marginLeft="20dp"
                android:layout_marginTop="28dp"
                android:textStyle="bold"
                android:textSize="15sp"/>
        <TextView
            android:id="@+id/DetailTmp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:textStyle="bold"
            android:layout_marginLeft="60dp"/>
    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:background="@drawable/textviewsolid">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp"
                android:textStyle="bold"
                android:text="물주기 방법: "
                android:layout_marginLeft="20dp"
                android:textSize="15sp"/>
        <TextView
            android:id="@+id/DetailHum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_marginTop="28dp"
            android:layout_marginLeft="8dp"/>
    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="181dp"
            android:background="@drawable/textviewsolid"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="28dp"
                android:text="Description: "
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/DetailDes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="28dp"
                android:textStyle="bold" />

        </LinearLayout>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/metroGreen"
        android:orientation="horizontal">

        <Button
            android:id="@+id/checkplant"
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="160dp"

            android:background="@drawable/rounded_button_background"
            android:text="측정하기"
            android:textAllCaps="false"
            android:textColor="@color/materialLightGreen700" />
    </LinearLayout>

</LinearLayout>
